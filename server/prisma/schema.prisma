generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstname String
  lastName  String?
  email     String  @unique()
  password  String
  basket    Basket?

  @@map("users")
}

model Basket {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
  userId   String    @unique
  user     User      @relation(fields: [userId], references: [id])

  @@map("baskets")
}

model Product {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name             String
  price            Int
  shortDescription String?
  categories       Category[]
  baskets          Basket[]

  @@map("products")
}

model Category {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name     String
  products Product[]

  @@map("categories")
}
